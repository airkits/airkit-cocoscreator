{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "removeComments": true,
    "outFile": "./airkit.js",
    // "downlevelIteration": true,
    "lib": [
      "es5",
      "dom",
      "es2015.promise",
      // "es2015.symbol",
      // "es2015.iterable",
      "es2015.core"
    ]
  },
  "include": [
    "airkit",
    "lib"
  ],
  "exclude": [
    "node_modules",
    "bin/**/*.d.ts",
    "test"
  ],
}